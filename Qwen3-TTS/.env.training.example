# Device & Training Settings
DEVICE=cuda
MIXED_PRECISION=bf16

# Model & Data Paths
INIT_MODEL_PATH=Qwen/Qwen3-TTS-12Hz-1.7B-Base
TOKENIZER_PATH=Qwen/Qwen3-TTS-Tokenizer-12Hz
OUTPUT_MODEL_PATH=./output
DATASET_NAME=vaghawan/hausa-tts-22k
TRAIN_SPLIT=train
VALIDATION_SPLIT=validation

# Training Parameters
BATCH_SIZE=2
LR=2e-5
NUM_EPOCHS=3
GRADIENT_ACCUMULATION_STEPS=4
WEIGHT_DECAY=0.01
WARMUP_STEPS=100
MAX_GRAD_NORM=1.0

# Reference Audio (for voice cloning)
REF_AUDIO_PATH=voices/speaker/reference.wav
REF_TEXT=""
SPEAKER_NAME=reference_speaker

# Dataset Limits
MAX_TRAIN_SAMPLES=
MAX_EVAL_SAMPLES=

# Logging & Checkpointing
LOGGING_STEPS=10
SAVE_STEPS=500
EVAL_STEPS=500
SAVE_TOTAL_LIMIT=3

# WandB Tracking
USE_WANDB=true
WANDB_PROJECT=qwen3-tts-hausa
WANDB_RUN_NAME=

# Hugging Face Upload
UPLOAD_TO_HUB=false
HUB_MODEL_ID_BEST=your-username/tts-best
HUB_MODEL_ID_LAST=your-username/tts-last
HF_TOKEN=

# Workflow Control
SKIP_PREPARE=false
PREPARE_ONLY=false

# Data Loading
NUM_WORKERS=0
