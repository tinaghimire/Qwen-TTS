# ============================================
# Qwen3-TTS Training Configuration
# ============================================

# Copy this file to .env and update the values:
#   cp .env.training.example .env

# ============================================
# Device Configuration
# ============================================
# Device to use: cuda or cpu
DEVICE=cuda

# ============================================
# Dataset Configuration
# ============================================
# Hugging Face dataset name
DATASET_NAME=vaghawan/hausa-tts-22k

# Training data JSONL path
TRAIN_JSONL=./data/train.jsonl

# Validation data JSONL path (optional)
VALIDATION_JSONL=./data/validation.jsonl

# Maximum training samples (optional, leave empty for all)
MAX_TRAIN_SAMPLES=

# Maximum evaluation samples (optional, leave empty for all)
MAX_EVAL_SAMPLES=

# ============================================
# Model Configuration
# ============================================
# Initial model path
INIT_MODEL_PATH=Qwen/Qwen3-TTS-12Hz-1.7B-Base

# Output model path
OUTPUT_MODEL_PATH=./output

# Output directory for advanced training
OUTPUT_DIR=./output

# Tokenizer path
TOKENIZER_PATH=Qwen/Qwen3-TTS-Tokenizer-12Hz

# ============================================
# Reference Audio Configuration
# ============================================
# Path to reference audio file
REF_AUDIO_PATH=/workspace/Qwen-TTS/voices/english_voice/english_voice_24k.wav

# Reference text for voice cloning
REF_TEXT="MTN Entertainment and Lifestyle. Entertainment and Lifestyle are at the heart of MTN's offering. We bring you music, movies, games and more through our digital platforms. With MTN musicals, you can stream your favorite"

# ============================================
# Training Hyperparameters
# ============================================
# Batch size
BATCH_SIZE=2

# Learning rate
LR=2e-5

# Number of epochs
NUM_EPOCHS=3

# Gradient accumulation steps (advanced training)
GRADIENT_ACCUMULATION_STEPS=4

# Weight decay
WEIGHT_DECAY=0.01

# Warmup steps
WARMUP_STEPS=100

# Maximum gradient norm
MAX_GRAD_NORM=1.0

# ============================================
# Speaker Configuration
# ============================================
# Speaker name
SPEAKER_NAME=hausa_speaker

# ============================================
# Logging and Checkpointing (Advanced Training)
# ============================================
# Logging frequency (steps)
LOGGING_STEPS=10

# Checkpoint save frequency (steps)
SAVE_STEPS=500

# Evaluation frequency (steps)
EVAL_STEPS=500

# Maximum number of checkpoints to keep
SAVE_TOTAL_LIMIT=3

# ============================================
# WandB Configuration (Advanced Training)
# ============================================
# Enable/disable WandB logging: true, false, 1, 0
USE_WANDB=true

# WandB project name
WANDB_PROJECT=qwen3-tts-hausa

# WandB run name (optional, auto-generated if empty)
WANDB_RUN_NAME=

# ============================================
# Hugging Face Hub Configuration (Advanced Training)
# ============================================
# Enable/disable model upload: true, false, 1, 0
UPLOAD_TO_HUB=false

# Best model repository ID
HUB_MODEL_ID_BEST=vaghawan/tts-best

# Last model repository ID
HUB_MODEL_ID_LAST=vaghawan/tts-last

# Hugging Face token (required for upload)
HF_TOKEN=hf_***********

# ============================================
# Mixed Precision Configuration (Advanced Training)
# ============================================
# Mixed precision mode: bf16, fp16, no
MIXED_PRECISION=bf16

# ============================================
# Workflow Control
# ============================================
# Skip data preparation: true, false, 1, 0
SKIP_PREPARE=false

# Only prepare data, don't train: true, false, 1, 0
PREPARE_ONLY=false